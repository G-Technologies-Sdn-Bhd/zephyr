# DPS368 temperature and pressure sensor configuration options

# Copyright (c) 2019 Infineon Technologies AG
# SPDX-License-Identifier: Apache-2.0

menuconfig DPS368
	bool "DPS368 sensor"
	depends on I2C
	help
	  Enable driver for DPS368 I2C-based temperature and pressure sensor.

if DPS368

menu "Attributes"

choice
	prompt "DPS368 temperature oversampling"
	default DPS368_TEMP_OSR_8X
	help
	  Select temperature oversampling for the DPS368 sensor.  Higher values
	  lead to more accurate readings, but higher power consumption.
config DPS368_TEMP_OSR_1X
	bool "x1"
config DPS368_TEMP_OSR_2X
	bool "x2"
config DPS368_TEMP_OSR_4X
	bool "x4"
config DPS368_TEMP_OSR_8X
	bool "x8"
config DPS368_TEMP_OSR_16X
	bool "x16"
config DPS368_TEMP_OSR_32X
	bool "x32"
config DPS368_TEMP_OSR_64X
	bool "x64"
config DPS368_TEMP_OSR_128X
	bool "x128"
endchoice

choice
	prompt "DPS368 pressure oversampling"
	default DPS368_PRESS_OSR_8X
	help
	  Select pressure oversampling for the DPS368 sensor.  Higher values
	  lead to more accurate readings, but higher power consumption.
config DPS368_PRESS_OSR_1X
	bool "x1"
config DPS368_PRESS_OSR_2X
	bool "x2"
config DPS368_PRESS_OSR_4X
	bool "x4"
config DPS368_PRESS_OSR_8X
	bool "x8"
config DPS368_PRESS_OSR_16X
	bool "x16"
config DPS368_PRESS_OSR_32X
	bool "x32"
config DPS368_PRESS_OSR_64X
	bool "x64"
config DPS368_PRESS_OSR_128X
	bool "x128"
endchoice

endmenu

endif # DPS368
